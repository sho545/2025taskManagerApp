<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

    <context id="default" targetRuntime="MyBatis3DynamicSql">

        <!-- <plugin type="com.example.demo.resources.UseGeneratedKeysPlugin"/> -->

        <!-- <plugin type="org.mybatis.generator.plugins.dsql.MapperAnnotationPlugin" /> -->

        <jdbcConnection driverClass="org.h2.Driver"
                        connectionURL="jdbc:h2:file:./mybatis-db/testdb;DB_CLOSE_DELAY=-1;AUTO_SERVER=TRUE"
                        userId="sa"
                        password="">
        </jdbcConnection>

        <javaModelGenerator targetPackage="com.example.demo.generated.infrastructure.entity" targetProject="src/main/java"/>
        <javaClientGenerator type="ANNOTATEDMAPPER" targetPackage="com.example.demo.generated.infrastructure.mapper" targetProject="src/main/java"/>

        <table tableName="TASKS" domainObjectName="TaskEntity">
            <generatedKey column="id" sqlStatement="JDBC" identity="true" />

            <columnOverride column="DUE_DATE"
                  javaType="java.time.OffsetDateTime"
                  jdbcType="TIMESTAMP_WITH_TIMEZONE" />
        </table>
    </context>
</generatorConfiguration>